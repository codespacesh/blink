{
  "name": "@blink/desktop",
  "productName": "Blink Desktop",
  "version": "0.1.0",
  "description": "Blink Desktop App - Dev TUI with GUI",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "start": "electron dist/main.js",
    "dev": "bun run build && concurrently -n main,app,fileviewer,css,electron -c blue,green,yellow,cyan,magenta \"bun run watch:main\" \"bun run watch:app\" \"bun run watch:file-viewer\" \"bun run build:css -- --watch\" \"node dev-server.js\"",
    "build": "bun run build:css && bun run build:main && bun run build:app && bun run build:file-viewer && bun run build:html && bun run build:assets",
    "package": "bun run build && electron-builder --mac --dir",
    "start:packaged": "open 'release/mac-arm64/Blink Desktop.app'",
    "dist": "bun run build && electron-builder --mac",
    "build:css": "node build-css.js",
    "build:main": "esbuild src/main.ts --platform=node --format=cjs --outfile=dist/main.js --packages=external",
    "build:app": "bunx esbuild src/app.tsx --bundle --platform=node --format=cjs --outfile=dist/app.js --loader:.tsx=tsx --loader:.ts=tsx --loader:.css=empty --inject:src/shim.js --external:electron --external:@electron/remote --external:esbuild --define:import.meta.url=importMetaUrl",
    "build:file-viewer": "bunx esbuild src/file-viewer.tsx --bundle --platform=node --format=cjs --outfile=dist/file-viewer.js --loader:.tsx=tsx --loader:.ts=tsx --loader:.css=empty --inject:src/shim.js --external:electron --external:@electron/remote --define:import.meta.url=importMetaUrl",
    "build:html": "cp src/app.html dist/app.html && cp src/file-viewer.html dist/file-viewer.html",
    "build:assets": "mkdir -p dist/assets && cp -r assets/* dist/assets/",
    "watch:main": "esbuild src/main.ts --platform=node --format=cjs --outfile=dist/main.js --packages=external --watch",
    "watch:app": "bunx esbuild src/app.tsx --bundle --platform=node --format=cjs --outfile=dist/app.js --loader:.tsx=tsx --loader:.ts=tsx --loader:.css=empty --inject:src/shim.js --external:electron --external:@electron/remote --external:esbuild --define:import.meta.url=importMetaUrl --watch",
    "watch:file-viewer": "bunx esbuild src/file-viewer.tsx --bundle --platform=node --format=cjs --outfile=dist/file-viewer.js --loader:.tsx=tsx --loader:.ts=tsx --loader:.css=empty --inject:src/shim.js --external:electron --external:@electron/remote --define:import.meta.url=importMetaUrl --watch"
  },
  "author": "Blink Desktop",
  "dependencies": {
    "@blink.so/api": "^0.0.11",
    "@electron/remote": "^2.1.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "blink": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "esbuild": "^0.25.9",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-highlight": "^7.0.2",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "ai": "^5.0.75",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "esbuild-plugin-postcss2": "^0.1.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "tailwindcss-animate": "^1.0.7"
  },
  "build": {
    "appId": "com.blink.desktop",
    "productName": "Blink Desktop",
    "electronVersion": "37.6.1",
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "asarUnpack": [
      "node_modules/@electron/remote/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "!node_modules/**/*",
      "node_modules/@electron/remote/**/*"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
